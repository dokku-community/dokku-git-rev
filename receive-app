#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x

APP="$1"; REV=$2; APP_PATH="$DOKKU_ROOT/$APP"

# Ensure there's a directory for the app
if [[ ! -d "$APP_PATH" ]]; then
	mkdir -p "$APP_PATH"
fi

# Save the REV to a file called .dokku-git-rev to 
echo $REV > "$APP_PATH/.dokku-git-rev"
